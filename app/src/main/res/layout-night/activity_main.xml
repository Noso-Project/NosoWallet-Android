<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/walletStyle"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/background_corner_rounded_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:text="NOSO"
                android:textColor="@color/colorChatBlack"
                android:textSize="@dimen/main_current_noso_title_text_size"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorChatBlack"
                android:layout_marginTop="-10dp"
                android:paddingHorizontal="11dp"
                android:text="m  o  b  i  l  e"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right">

            <ImageButton
                android:id="@+id/main_settings"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_settings" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="top">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginHorizontal="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wallet_actions_create" /> />
                    <ImageButton
                        android:id="@+id/main_wallet_create"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_corner_rounded_white_actionable"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_create_new_24"
                        app:tint="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginHorizontal="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wallet_actions_import" />
                    <ImageButton
                        android:id="@+id/main_wallet_import"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_corner_rounded_white_actionable"
                        android:padding="5dp"
                        android:src="@drawable/ic_import_icon"
                        app:tint="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginHorizontal="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wallet_actions_export" />
                    <ImageButton
                        android:id="@+id/main_wallet_export"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_corner_rounded_white_actionable"
                        android:padding="5dp"
                        android:src="@drawable/ic_export_icon"
                        app:tint="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingVertical="10dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/wallet_grand_balance" />
                <TextView
                    android:id="@+id/main_grand_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="0.00000000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_address_list"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/background_corner_rounded_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_corner_rounded_white"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/main_netstat_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/main_netstat_block_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:backgroundTint="@color/colorLightGray"
                android:paddingHorizontal="@dimen/main_netstat_block_hpadding"
                android:paddingVertical="@dimen/main_netstat_block_vpadding"
                android:background="@drawable/background_corner_rounded_white">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_block"/>
                <TextView
                    android:id="@+id/main_netstat_block_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:textStyle="bold"
                    android:text="00000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                >
                <TextView
                    android:id="@+id/main_netstat_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorChatBlack"
                    android:textSize="@dimen/main_netstat_date_text_size"
                    android:text="24/12/2021"
                    />
                <TextView
                    android:id="@+id/main_netstat_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorChatBlack"
                    android:textSize="@dimen/main_netstat_date_text_size"
                    android:text="22:49:10"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                >
                <Button
                    android:id="@+id/main_netstat_open_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="0dp"
                    android:textSize="@dimen/main_send_funds_button_text"
                    android:text="@string/general_send_funds_title"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_send_funds_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"

            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorChatBlack"
                    android:text="@string/general_send_funds_title"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/general_send_funds_from"/>
                <EditText
                    android:id="@+id/main_send_funds_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:enabled="false"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorWhite"
                    android:text=""
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/background_corner_rounded_dark"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/general_send_funds_to"/>
                <ImageButton
                    android:id="@+id/main_send_funds_paste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="4dp"
                    android:padding="3dp"
                    android:background="@drawable/background_corner_rounded_actionable"
                    android:src="@drawable/ic_baseline_content_paste_24"
                    app:tint="@color/black" />
                <EditText
                    android:id="@+id/main_send_funds_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorWhite"
                    android:inputType="textNoSuggestions|textShortMessage"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/background_corner_rounded_dark"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="@string/general_send_funds_amount"/>
                <ImageView
                    android:id="@+id/main_send_funds_amount_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="4dp"
                    android:padding="3dp"
                    android:background="@drawable/background_corner_rounded_actionable"
                    android:src="@drawable/ic_baseline_paid_24"
                    app:tint="@color/black" />
                <EditText
                    android:id="@+id/main_send_funds_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:inputType="number|text"
                    android:imeOptions="actionNext"
                    android:text="0.00000000"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/background_corner_rounded_dark"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:text="@string/general_send_funds_ref"/>
                <EditText
                    android:id="@+id/main_send_funds_reference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorWhite"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginLeft="10dp"
                    android:inputType="textShortMessage|textAutoComplete|textAutoCorrect"
                    android:maxLines="2"
                    android:imeOptions="actionDone"
                    android:background="@drawable/background_corner_rounded_dark"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/main_send_funds_useall_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="@string/general_send_funds_useall"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <Button
                        android:id="@+id/main_send_funds_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:text="@string/general_send_funds_close"
                        />
                    <Button
                        android:id="@+id/main_send_funds_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:visibility="gone"
                        android:layout_marginRight="10dp"
                        android:text="@string/general_send_funds_cancel"
                        />
                    <Button
                        android:id="@+id/main_send_funds_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="@string/general_send_funds_send"
                        />
                    <Button
                        android:visibility="gone"
                        android:id="@+id/main_send_funds_send_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:backgroundTint="@color/colorOrangeWarm"
                        android:text="@string/general_send_funds_send_confirm"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>