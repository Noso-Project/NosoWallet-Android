<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_computer_24"
        app:tint="@color/black" />
    <TextView
        android:id="@+id/connection_row_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorChatBlack"
        android:textSize="18dp"
        android:text="192.168.1.23"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorChatBlack"
        android:textSize="20dp"
        android:layout_marginHorizontal="5dp"
        android:text=":"
        />
    <TextView
        android:id="@+id/connection_row_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorChatBlack"
        android:textSize="18dp"
        android:text="8087"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        >
        <ImageView
            android:id="@+id/connection_row_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_check_circle_24"
            />

    </LinearLayout>

</LinearLayout>